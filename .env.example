APP_NAME="ASABRI Portfolio"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=asabri_portfolio
DB_USERNAME=root
DB_PASSWORD=

# Broadcasting & Cache
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@asabri.com"
MAIL_FROM_NAME="${APP_NAME}"

# File Upload Configuration
MAX_UPLOAD_SIZE=10240  # in KB (10MB)
ALLOWED_FILE_TYPES=pdf

# Pagination
PAGINATION_PER_PAGE=15

# Activity Log
ACTIVITY_LOG_ENABLED=true
ACTIVITY_LOG_RETENTION_DAYS=365

# API Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1